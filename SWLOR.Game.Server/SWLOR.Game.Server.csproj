<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <LangVersion>8.0</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Legacy\Data\Migrations\2020-06-20.1.sql" />
    <None Remove="Legacy\Data\Migrations\2020-07-02.1.sql" />
    <None Remove="Legacy\Data\Migrations\2020-07-02.2.sql" />
    <None Remove="Legacy\Data\Migrations\2020-07-02.3.sql" />
    <None Remove="Legacy\Data\Migrations\2020-09-29.2.sql" />
    <None Remove="Legacy\Data\Migrations\2020-10-22.1.sql" />
    <None Remove="Legacy\Data\Migrations\2020-10-26.1.sql" />
    <None Remove="Legacy\Data\Migrations\2020-10-29.1.sql" />
    <None Remove="Legacy\Data\Migrations\Initialization.sql" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Legacy\Data\Migrations\2020-06-20.1.sql" />
    <EmbeddedResource Include="Legacy\Data\Migrations\2020-07-02.1.sql" />
    <EmbeddedResource Include="Legacy\Data\Migrations\2020-07-02.2.sql" />
    <EmbeddedResource Include="Legacy\Data\Migrations\2020-07-02.3.sql" />
    <EmbeddedResource Include="Legacy\Data\Migrations\2020-09-29.2.sql" />
    <EmbeddedResource Include="Legacy\Data\Migrations\2020-10-22.1.sql" />
    <EmbeddedResource Include="Legacy\Data\Migrations\2020-10-26.1.sql" />
    <EmbeddedResource Include="Legacy\Data\Migrations\2020-10-29.1.sql" />
    <EmbeddedResource Include="Legacy\Data\Migrations\Initialization.sql" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Dapper" Version="2.0.35" />
    <PackageReference Include="Dapper.Contrib" Version="2.0.35" />
    <PackageReference Include="MySqlConnector" Version="1.0.1" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="Serilog" Version="2.10.0" />
    <PackageReference Include="Serilog.Sinks.Async" Version="1.4.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="3.1.1" />
    <PackageReference Include="Serilog.Sinks.File" Version="4.1.0" />
    <PackageReference Include="StackExchange.Redis" Version="2.1.58" />
    <PackageReference Include="System.Reflection.Emit" Version="4.7.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Feature\AbilityDefinition\" />
    <Folder Include="Feature\StatusEffectDefinition\" />
    <Folder Include="Service\KeyItemService\" />
  </ItemGroup>

  <Target Name="NWN" AfterTargets="Build">
    <ItemGroup>
      <AllOutputs Include="$(OutputPath)$(MSBuildProjectName).dll" />
      <AllOutputs Include="$(OutputPath)$(MSBuildProjectName).pdb" />
      <AllOutputs Include="$(OutputPath)$(MSBuildProjectName).runtimeconfig.json" />
      <AllOutputs Include="$(OutputPath)$(MSBuildProjectName).deps.json" />
    </ItemGroup>
  </Target>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="$(SolutionDir)NWN.Python\deployBuild.exe -b $(ProjectDir)$(OutDir)" />
  </Target>
</Project>